# Shape Network Configuration
# Dual chain support: Read from one chain, mint on another

# Reading chain (for NFT data and analytics) - use mainnet for real data
READ_CHAIN_ID=360 # Shape Mainnet Chain ID

# Minting chain (for NFT contract deployment) - use testnet for safe testing  
MINT_CHAIN_ID=11011 # Shape Sepolia Testnet Chain ID

# Legacy single chain ID (for backwards compatibility with existing tools)
# If set, this overrides READ_CHAIN_ID and MINT_CHAIN_ID
# CHAIN_ID=11011

# Alchemy API Key (get from https://www.alchemy.com/)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Rarible API Key (optional, for additional NFT marketplace data)
RARIBLE_API_KEY=your_rarible_api_key_here

# Redis URL for caching (optional, gracefully degrades without it)
REDIS_URL=rediss://default:password@myredis-12345.upstash.io:6379

# Port configuration (optional, defaults to 3002)
PORT=3002

# Contract Addresses
KATACHI_CONTRACT_TESTNET=0x06740C004c98afA7f9F5C38C00B8DAF9c33ABFB3
KATACHI_CONTRACT_MAINNET=0x9fba90186403d1c5e3e1971536862cf4ebb0f766

# Disable rate limiting for development
DISABLE_RATE_LIMIT=true