# Shape Network Configuration
# Reading chain (for NFT data and analytics) - use mainnet for real data
NEXT_PUBLIC_READ_CHAIN_ID=360 # Shape Mainnet Chain ID

# Minting chain (for NFT contract deployment) - use testnet for safe testing  
NEXT_PUBLIC_MINT_CHAIN_ID=11011 # Shape Sepolia Testnet Chain ID

# Safety: Prevent accidental mainnet minting (set to 'true' to allow mainnet minting)
NEXT_PUBLIC_ALLOW_MAINNET_MINTING=false

# Contract Addresses
NEXT_PUBLIC_KATACHI_CONTRACT_TESTNET=0x4c0041C6A3B5bFf81415be201e779d96a146683f
NEXT_PUBLIC_KATACHI_CONTRACT_MAINNET=0xE5CEc1C6a8f0fB8d85E41Eb6013477f7e1440f57

# Alchemy API Key (get from https://www.alchemy.com/)
NEXT_PUBLIC_ALCHEMY_KEY=

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# MCP Server URL for sentiment interpretation (local dev or production)
MCP_SERVER_URL=http://localhost:3002/mcp #LOCAL DEV
# MCP_SERVER_URL=https://katachi-gen-mcp-server.vercel.app/mcp #PRODUCTION

# Enable test mode for wallet address input field
NEXT_PUBLIC_ENABLE_TEST_MODE=true
